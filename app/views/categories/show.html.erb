<h1><%= @category.name %></h1>

<h3> There are <%= pluralize(@category.posts.length, "post") %> in this category: </h3>

<ul>
<% @category.posts.each do |post| %>
	<li><p><%= link_to(post.title, post_path(post))%> <%= "by" + post.author.name if post.author %></p></li>
<% end %>
</ul>
